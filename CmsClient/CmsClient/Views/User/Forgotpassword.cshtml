
<header>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <style>
        .form-gap {
            padding-top: 70px;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            color: #2828cd;
        }

        .btn-color {
            background-color: #2828cd;
            color: white;
        }

        .container:before {
            background-image: url("https://static.vecteezy.com/system/resources/previews/002/528/823/non_2x/doctor-hands-in-gloves-typing-on-computer-keyboard-telemedicine-or-medical-technology-concept-background-top-view-photo.jpg");
            width: 100%;
            height: 100%;
            background-size: cover;
            content: "";
            position: fixed;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            z-index: -1;
            display: block;
            /*filter: blur(2px);*/
        }
    </style>
</header>
<body>
    <div class="form-gap"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3 style="color:dimgrey"><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">Forgot Password?</h2>
                            <h4 class="text-center">Please enter your user name, and we’ll send you instructions to reset your password.</h4>

                            <div class="panel-body">

                                <form id="forgotpassword-form" role="form" autocomplete="off" class="form" method="post">
                                    <h5 class="text-danger">@ViewBag.err</h5>
                                    <div class="form-group">
                                        <div class="input-group text-left">
                                            <label class="control-label" style="color:black">Enter Username</label>
                                            @*<span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>*@
                                            <input id="username" name="username" placeholder="Username" class="form-control" type="text">

                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
                                        <a href='@Url.Action("ForgotUsername", "User")' style="margin-left:auto;margin-right:auto; font-size: 16px;font-family: Verdana;" class="text-body">Can't remember username?</a>
                                    </div>
                                    <div class="form-group">
                                        <input name="recover-submit" class="btn btn-lg btn-color btn-block" value="Send Reset Link" type="submit">
                                    </div>
                                </form>
                                <div style="float:right; margin:0;">
                                    <a asp-action="Login" asp-controller="Login" class="btn btn-secondary">Back</a>
                                </div>
                                @if (ViewBag.EmailSentMessage != null)
                                {
                                    <div class="bg-success">
                                        <label>@ViewBag.EmailSentMessage</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    <script>
        $(document).ready(function () {

            const username = document.querySelector('#username');
            const form = document.querySelector('#forgotpassword-form');
            username.addEventListener('keydown', function (event) {
                if (event.keyCode === 13) {
                    form.submit();
                }

            });
            document.addEventListener('keydown', function (event) {
                if (event.keyCode === 13 && event.target.nodeName === 'INPUT') {
                    event.preventDefault();
                    var form = event.target.form;
                    var index = Array.prototype.indexOf.call(form, event.target);
                    form.elements[index + 1].focus();


                }
            });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
