<header>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dongle&display=swap" rel="stylesheet">
    <style>
        .height-100 {
            height: 100vh
        }

        .card {
            width: 400px;
            border: none;
            height: 300px;
            box-shadow: 0px 5px 20px 0px #d2dae3;
            z-index: 1;
            display: flex;
            justify-content: center;
            align-items: center
        }

            .card h4 {
                color: darkred;
                font-family: 'Dongle', sans-serif;
                font-size: 40px;
            }

            .card h6 {
                color: mediumblue;
                font-size: 30px;
                font-family: 'Dongle', sans-serif;
            }

            .card span {
                font-family: 'Dongle', sans-serif;
                font-size: 24px;
            }

        .inputs input {
            width: 350px;
            height: 40px;
            border-radius: 8px;
        }

        .resend .content a {
            color: red;
            font-family: 'Dongle', sans-serif;
            font-size: 24px;
        }

        .resend .content {
            margin-top: 12px
        }

        .form-control:focus {
            box-shadow: none;
            border: 2px solid red
        }

        .verify-btn {
            font-weight: 600;
            border-radius: 20px;
            background-color: green;
            color:white;
            height: 40px;
            box-shadow: 0 0 8px green;
            width: 140px
        }
    </style>
</header>

<div class="container height-100 d-flex justify-content-center align-items-center">
    <div class="position-relative">
        <div class="card p-2 text-center">
            
            <h4>@ViewBag.invalidCode</h4>
            <h6>Please enter the security code <br> to verify your account</h6>
            <div> <span>A code has been sent to your email</span> </div>
            <form method="post">
                <div>
                    <input type="text" name="securityCode" placeholder="Enter Security Code" class="m-2 text-center form-control" />
                </div>
                <div class="mt-4">
                    <input type="submit" value="Verify" asp-controller="User" asp-action="Activate" class="btn px-4 verify-btn " />
                </div>

                <div class="resend">
                    <div class="content d-flex justify-content-center align-items-center">
                        <span>Didn't get the code? </span> <a href='@Url.Action("Resend", "User")' class="text-decoration-none ms-3">Resend</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
