@model CmsClient.Models.OTP

@{
    ViewData["Title"] = "Activate";
}
<html>
<head>
    <title>
        Verify OTP
    </title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            font-size: 14px;
            color: #1c0505;
        }
    </style>
</head>
<body>
    <div style="margin-top:10%">
        <div class="card mx-auto border-info bg-light " style="width:20rem;">
            <div>
                <a style="float:right;" href='@Url.Action("Login","Login")' class="btn btn-light">
                    <i class="fa fa-close text-secondary"></i>
                </a>
            </div>
            <img style="width:60px; height:60px" src="https://media-exp1.licdn.com/dms/image/C560BAQEiT9Jlibun6A/company-logo_200_200/0/1623866540247?e=2159024400&v=beta&t=MQLvPyJh2DeKWoruvGd8-EJbh1yyUKCgIWezMuuxphc" class="card-img-top rounded-circle mx-auto mt-2 mb-2" alt="logo">
            <div class="card-body">
                <div>
                    <h3 class="card-title text-secondary text-center mb-4">Verify OTP</h3>
                    <p class="card-text mb-3">OTP has been sent to your registered email</p>
                </div>
                <form asp-action="Activate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">                       
                        
                        <input asp-for="securitycode" class="form-control" placeholder="Enter OTP"/>
                        <span asp-validation-for="securitycode" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <input type="submit" value="Verify" class="btn btn-primary" />
                    </div>
                    <div class="mt-4">
                        <span>Didn't get the code? </span><a href='@Url.Action("Resend", "User")'>Resend</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

