@model CmsClient.ViewModels.RegisterForm

    <html>
    <head>
        <title>
            Forgot Password
        </title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">


        <style>
            body {
                font-family: 'Montserrat', sans-serif;
                font-size: 14px;
                color: #1c0505;
            }
        </style>
    </head>
    <body>
        <div style="margin-top:6%">
            <div class="card mx-auto border-info bg-light " style="width:26rem;height:30rem;">
                <div>
                    <a style="float:right;" href='@Url.Action("Login","Login")' class="btn btn-light">
                        <i class="fa fa-close text-secondary"></i>
                    </a>
                </div>
                <img style="width:60px; height:60px" src="https://media-exp1.licdn.com/dms/image/C560BAQEiT9Jlibun6A/company-logo_200_200/0/1623866540247?e=2159024400&v=beta&t=MQLvPyJh2DeKWoruvGd8-EJbh1yyUKCgIWezMuuxphc" class="card-img-top rounded-circle mx-auto mt-3" alt="logo">
                <div class="card-body">
                    <div>
                        <h3 class="card-title text-secondary text-center mb-4">Forgot Password</h3>
                        <p class="card-text mb-4">Enter your user name and we will send you an otp to your registerd email</p>
                    </div>
                    <form id="forgotpasswordform" method="post">
                        <div>
                            <span class="text-danger">@ViewBag.userNotFound</span>
                            <label>Enter User Name</label><span class="text-danger">*</span>
                            <input asp-for="Username" type="text" id="username" class="form-control mt-1 mb-4" placeholder="Adam10">
                        </div>
                        <div>
                            <a href='@Url.Action("ForgotUsername", "User")' class="text-secondary">Can't remember username?</a>
                        </div>
                        <div class="text-center mt-4">
                            <input type="submit" value="Send OTP link" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>

@section Scripts {

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
