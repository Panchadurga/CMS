<h4 class="text-center text-primary">Edit Patient</h4>
<hr />

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Edit" class="patientform">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="PatientId" class="form-control" readonly/>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="Firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="Lastname" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label><span class="text-danger">*</span>
                <select asp-for="Sex" class="form-control">
                    <option>M</option>
                    <option>F</option>
                    <option>Others</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Age" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @* for removing class="container" *@
    <script>$(document).ready(function () {
            const element = document.querySelector('#container');
            element.classList.remove('container');
        });</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
