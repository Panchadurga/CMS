@model CmsClient.Helpers.Resetpassword

@{
    ViewData["Title"] = "ResetPassword";
}
<header>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <style>
        .form-gap {
            padding-top: 30px;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            color: #2828cd;
        }

        .btn-color {
            background-color: #2828cd;
            color: white;
        }

        .container:before {
            background-image: url("https://static.vecteezy.com/system/resources/previews/002/528/823/non_2x/doctor-hands-in-gloves-typing-on-computer-keyboard-telemedicine-or-medical-technology-concept-background-top-view-photo.jpg");
            width: 100%;
            height: 100%;
            background-size: cover;
            content: "";
            position: fixed;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            z-index: -1;
            display: block;
            /*filter: blur(2px);*/
        }
    </style>
</header>

<body>
    <div class="form-gap"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div style="float:right;"> 
                            <a href='@Url.Action("Login","Login")' class="btn btn-light">
                                <i class="fa fa-close"></i>
                            </a>
                        </div>
                        <div class="text-center">
                            <h4>Hi @ViewBag.username, You can reset your password here!</h4>
                            <h3 style="color:dimgrey"><i style="margin-left:30px;" class="fa fa-key fa-4x"></i></h3>
                            <h2 class="text-center">Reset Password</h2>
                            <div class="panel-body">

                                <form asp-action="ResetPassword" id="reset-form">
                                    <input asp-for="Username" value="@ViewBag.username" class="form-control" hidden />
                                    <div class="form-group">
                                        <div style="color:black" class="input-group text-left">
                                            <label asp-for="Currentpassword" class="control-label"></label><span class="text-danger">*</span>
                                            <input id="currentpassword" asp-for="Currentpassword" placeholder="New password" class="form-control" />
                                            <span asp-validation-for="Currentpassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div style="color:black" class="form-group">
                                        <div class="input-group text-left">
                                            <label asp-for="Confirmpassword" class="control-label"></label><span class="text-danger">*</span>
                                            <input id="confirmpassword" asp-for="Confirmpassword" placeholder="Confirm password" class="form-control" />
                                            <span asp-validation-for="Confirmpassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input class="btn btn-lg btn-color btn-block" value="Change my password" type="submit">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script>
        $(document).ready(function () {

            const confirmpw = document.querySelector('#confirmpassword');
            const form = document.querySelector('#reset-form');
            confirmpw.addEventListener('keydown', function (event) {
                if (event.keyCode === 13) {
                    form.submit();
                }

            });
            document.addEventListener('keydown', function (event) {
                if (event.keyCode === 13 && event.target.nodeName === 'INPUT') {
                    event.preventDefault();
                    var form = event.target.form;
                    var index = Array.prototype.indexOf.call(form, event.target);
                    form.elements[index + 1].focus();


                }
            });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
