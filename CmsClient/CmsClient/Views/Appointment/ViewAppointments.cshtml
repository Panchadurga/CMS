@model IEnumerable<CmsClient.Models.Schedule>

@{ ViewData["Title"] = "ViewAppointments"; }
@Html.Partial("_Navbarmenu")
@*<p>
    <a asp-action="Choosedoctor" asp-controller="ChooseDoctor"><h2>Add Appointment</h2></a>
</p>*@
<div class="container">
    <br />
    <div>
        <a class="btn btn-primary btn-lg float-right mb-2" asp-action="Choosedoctor" asp-controller="ChooseDoctor">Add Appointment</a>
    </div>
    <br />
    <br />
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AppointmentId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PatientId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Specialization)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DoctorName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VisitDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AppointmentTime)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Specialization)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VisitDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentTime)
                        </td>
                        <td class="float-right">
                            <a href='@Url.Action("Delete","Appointment",new { id = item.AppointmentId } )' class="btn btn-danger">
                                <i class="far fa-calendar-times">&nbsp;Cancel Appointment</i>
                            </a>
                        </td>
                    </tr>
                 }
            </tbody>
        </table>
    </div>
</div>

        @section Scripts {
            @* for removing class="container" *@
            <script>
    $(document).ready(function () {
                    const element = document.querySelector('#container');
                    element.classList.remove('container');
                });</script>
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
